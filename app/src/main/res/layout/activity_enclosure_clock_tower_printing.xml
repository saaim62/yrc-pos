<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/light_screen_background"
    android:orientation="vertical">

    <com.yrc.pos.core.views.YrcTextView
        android:id="@+id/textView_ticketBasket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Ticket Basket"
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_35sdp"
        app:fontType="Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yrc.pos.core.views.YrcTextView
        android:id="@+id/button_adult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        tools:text="Adult   £20.00"
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_19sdp"
        android:visibility="gone"
        app:fontType="Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ticketBasket" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_over65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        tools:text="Over65   £30.00"
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_19sdp"
        android:visibility="gone"
        app:fontType="Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_adult" />

    <com.yrc.pos.core.views.YrcTextView
        android:id="@+id/button_1822"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_19sdp"
        android:visibility="gone"
        app:fontType="Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_over65" />

    <com.yrc.pos.core.views.YrcTextView
        android:id="@+id/button_racegoer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_19sdp"
        android:visibility="gone"
        app:fontType="Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1822" />

    <com.yrc.pos.core.views.YrcTextView
        android:id="@+id/textView_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/_30sdp"
        app:fontType="Bold"
        app:layout_constraintBottom_toTopOf="@+id/button_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_plus"
        style="@style/ArithmeticButtonStyle"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginStart="8dp"
        android:onClick="onPlusButtonClicked"
        android:text="+"
        app:fontType="Regular"
        app:layout_constraintBottom_toBottomOf="@+id/button_multiply"
        app:layout_constraintStart_toStartOf="parent" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_minus"
        style="@style/ArithmeticButtonStyle"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:onClick="onMinusButtonClicked"
        android:text="-"
        app:fontType="Regular"
        app:layout_constraintBottom_toBottomOf="@+id/button_multiply"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintStart_toEndOf="@+id/button_plus" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_multiply"
        style="@style/ArithmeticButtonStyle"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onMultiplyButtonClicked"
        android:text="x"
        app:fontType="Regular"
        app:layout_constraintBottom_toTopOf="@+id/button_cross"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_cross"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginStart="8dp"
        android:background="@drawable/cancel_button_background"
        android:onClick="onCrossButtonClicked"
        android:text="X"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_16sdp"
        app:fontType="Regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_cash" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_card"
        style="@style/CreditButtonStyle"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginBottom="32dp"
        android:onClick="onCardButtonClicked"
        android:text="card"
        android:textAllCaps="true"
        app:fontType="Regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_cash"
        app:layout_constraintStart_toEndOf="@+id/button_cross" />

    <com.yrc.pos.core.views.YrcButton
        android:id="@+id/button_cash"
        style="@style/CashButtonStyle"
        android:layout_width="@dimen/_94sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:onClick="onCashButtonClicked"
        android:text="cash"
        android:textAllCaps="true"
        app:fontType="Regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>